{
  "name": "Six Sigma",
  "description": "Six Sigma quality management methodology for process improvement",
  "dmaic_process": {
    "Define": {
      "description": "Define the problem and project goals",
      "tools": [
        "Project Charter",
        "Voice of Customer (VOC)",
        "SIPOC Diagram",
        "Stakeholder Analysis"
      ],
      "deliverables": [
        "Problem Statement",
        "Project Scope",
        "Team Charter",
        "Timeline"
      ]
    },
    "Measure": {
      "description": "Measure current process performance",
      "tools": [
        "Process Mapping",
        "Data Collection Plan",
        "Measurement System Analysis (MSA)",
        "Control Charts"
      ],
      "deliverables": [
        "Baseline Performance Data",
        "Process Capability Index",
        "Data Collection System",
        "Key Metrics"
      ]
    },
    "Analyze": {
      "description": "Analyze data to identify root causes",
      "tools": [
        "Fishbone Diagram",
        "5 Whys Analysis",
        "Pareto Analysis",
        "Statistical Analysis",
        "Regression Analysis"
      ],
      "deliverables": [
        "Root Cause Analysis",
        "Critical Factors",
        "Process Analysis",
        "Hypothesis Testing Results"
      ]
    },
    "Improve": {
      "description": "Implement solutions to improve process",
      "tools": [
        "Design of Experiments (DOE)",
        "Solution Selection Matrix",
        "FMEA",
        "Pilot Testing"
      ],
      "deliverables": [
        "Improvement Plan",
        "Implementation Results",
        "Process Modifications",
        "Performance Metrics"
      ]
    },
    "Control": {
      "description": "Control and sustain improvements",
      "tools": [
        "Control Plans",
        "Statistical Process Control (SPC)",
        "Standard Operating Procedures",
        "Training Plans"
      ],
      "deliverables": [
        "Control Documentation",
        "Monitoring System",
        "Response Plans",
        "Continuous Improvement Process"
      ]
    }
  },
